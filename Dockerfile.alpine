FROM golang:1.23-alpine AS builder

WORKDIR /app

COPY go.mod go.sum* ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o bear ./cmd/main.go

FROM alpine:3.20

RUN apk add --no-cache ca-certificates git

COPY --from=builder /app/bear /usr/local/bin/bear

ENTRYPOINT ["bear"]
